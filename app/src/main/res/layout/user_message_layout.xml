<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_account_circle_black_24dp"/>
    <TextView
        android:id="@+id/message_receiver_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="receiver message"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/receiver_profile_pic"
        android:background="@drawable/receiver_message_text_background"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/receiver_profile_pic" />
    <TextView
        android:id="@+id/message_sender_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="sender message"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toEndOf="@id/receiver_profile_pic"
        android:background="@drawable/sender_message_text_background"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />
</RelativeLayout>