<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_result_movie_parent"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/custom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_result_movie_poster"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:src="@drawable/movieposter"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/search_result_movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textColor="@android:color/black"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/search_result_movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Year"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp">

                    <Button
                        android:id="@+id/search_result_item_add_button"
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/add_icon"
                        android:text="Add"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginRight="20dp"/>
                    <Button
                        android:id="@+id/search_result_item_visit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movie Page"
                        android:fontFamily="@font/montserrat"
                        android:drawableLeft="@drawable/forward_icon"
                        android:background="@android:color/transparent"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>